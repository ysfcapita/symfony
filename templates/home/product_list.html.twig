{% extends 'base.html.twig' %}

{% block title %} {{route_name}} {% endblock %}

{% block body %}

<div class="bg-light m-5 rounded text-center p-2 display-6">Product List</div>
<div class="bg-light vh-50 m-5 rounded p-5">
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Product Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Category</th>
      <th scope="col">#</th>

    </tr>
  </thead>
  <tbody>
  {% for product in list_product %}
    <tr>
      <th scope="row">{{ product.id }}</th>
      <td>{{ product.name }}</td>
      <td>{{ product.description }}</td>
      <td>{{ product.price }}</td>
      <td>{{ product.category }}</td>
      <td class="t"><a href="{{ path('product_update', {id: product.id})}}" class="btn btn-success" >Edit</a> <a href="{{ path('product_delete', {id: product.id})}}" class="btn btn-danger">Delete</a></td>
    </tr>
   {% endfor %}
  </tbody>
</table>


 
</div>
</div>
{% endblock %}